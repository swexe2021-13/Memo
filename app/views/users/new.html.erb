<% if @user.errors.present? %>
<h3>エラーがあります。</h3>
<ul>
<% @user.errors.full_messages.each do |msg| %>
<li><%= msg %></li>
<% end %>
</ul>
<% end %>




<%= form_for @user, url: {action: :create} do |f| %>
  <%= f.label :name, 'name' %> 
  <%= f.text_field :name %> 
  <%= f.label :email, 'email' %> 
  <%= f.text_field :email %>
  <%= f.label :password, 'password' %> 
  <%= f.password_field :password %> 


  <%= f.submit '登録' %>
<% end %>