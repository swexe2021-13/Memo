<%= form_for @diary , url: {action: :update} do |f| %>
<%= f.label :title, 'タイトル' %>
<%= f.text_field :title %>
<%= f.label :message, Question.find_by(id: @diary.qid).question %>
<%= f.text_field :message %>

<%= f.label :file, 'ファイル' %>
<%= f.file_field :file %>
<%= f.hidden_field :qid, value: @diary.qid %>
<%= f.hidden_field :question, :value => @diary.qid %>
<%= f.submit '更新' %>
<% end %>