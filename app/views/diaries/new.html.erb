<div id="wrapper">
        <div id="header">
           <%= image_tag 'rogo4.jpg', class: 'rogo' %>
        </div>
        
        <div id="main">
            <div id="menu">
                <p><%= link_to 'ホームへ', diaries_path, class: 'button02' %></p><br>
                <p><%= link_to 'ログアウト',  login_logout_path, class: 'button02' %></p><br>
            </div>
            
        　　<div id="contents">
                <% if @diary.errors.present? %>
                <h3>エラーがあります。</h3>
                <ul>
                <% @diary.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
                <% end %>
                </ul>
                <% end %>
                
                <p><%= form_for @diary, url: {action: :create} do |f| %>
                <p><%= f.label :title, 'タイトル' %></p>
                <%= f.text_field :title, placeholder: "Title"%></p>
                <h4><p>お題：<%= f.label :message, Question.find_by(id: @question).question %></p></h4>
                <p><%= f.text_area :message,size: "70x10",placeholder: "How was your day?" %></p>
                <p><%= f.label :file, 'ファイル' %></p>
                <p><%= f.file_field :file %></p>
                <%= f.hidden_field :qid, value: Question.find_by(id: @question).id %>
                <br>
                <p><%= f.submit '投稿する' %></p>
                <% end %>
            </div>
        </div>
        
        <div id="footer">
           (c)copy right
       </div>
</div>

